{
	"$schema": "./node_modules/@angular/cli/lib/config/schema.json",
	"version": 1,
	"cli": {
		"packageManager": "npm",
		"analytics": false
	},
	"newProjectRoot": "projects",
	"projects": {
		"angular-seguidores": {
			"projectType": "application",
			"root": "",
			"sourceRoot": "src",
			"prefix": "app",
			"architect": {
				"build": {
					"builder": "@angular-architects/module-federation:build",
					"options": {
						"outputPath": "dist/angular-seguidores",
						"index": "src/index.html",
						"main": "src/main.ts",
						"polyfills": [],
						"tsConfig": "tsconfig.app.json",
						"assets": [
							{
								"glob": "**/*",
								"input": "public",
								"output": "."
							}
						],
						"styles": [
							"src/styles.css"
						],
						"scripts": []
					},
					"configurations": {
						"production": {
							"optimization": true,
							"outputHashing": "all",
							"sourceMap": false,
							"extractLicenses": true,
							"namedChunks": false,
							"budgets": [
								{
									"type": "initial",
									"maximumWarning": "500kB",
									"maximumError": "1MB"
								},
								{
									"type": "anyComponentStyle",
									"maximumWarning": "4kB",
									"maximumError": "8kB"
								}
							]
						},
						"development": {
							"optimization": false,
							"sourceMap": true,
							"extractLicenses": false
						}
					},
					"defaultConfiguration": "development"
				},
				"serve": {
					"builder": "@angular-devkit/build-angular:dev-server",
					"options": {
						"buildTarget": "angular-seguidores:build"
					}
				},
				"test": {
					"builder": "@angular/build:unit-test"
				}
			}
		}
	}
}